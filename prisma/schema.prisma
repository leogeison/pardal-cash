

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


  model Game {
  id             Int        @id @default(autoincrement())
  drawDate       DateTime
  drawnNumbers   Int[]
  tickets        Ticket[]
  winningGames   WinningGame[]

}

model Ticket {
  id             Int        @id @default(autoincrement())
  gameId         Int
  playerId       Int
  purchaseDate   DateTime
  bets           Json
  amountPaid     Float
  game           Game       @relation(fields: [gameId], references: [id])
  player         Player     @relation(fields: [playerId], references: [id])
  payments       Payment[]
  betVariations  BetVariation[]
  
}

model Player {
  id             Int        @id @default(autoincrement())
  name           String
  birthDate      DateTime
  cpf            String
  email          String
  tickets        Ticket[]
  tokens         Token[]
}

model WinningGame {
  id             Int        @id @default(autoincrement())
  gameId         Int
  awardDate      DateTime
  numberOfWinners Int
  game           Game       @relation(fields: [gameId], references: [id])
}

model Payment {
  id             Int        @id @default(autoincrement())
  ticketId       Int
  amountPaid     Float
  paymentDate    DateTime
  ticket         Ticket     @relation(fields: [ticketId], references: [id])
}

model Token {
  id             Int        @id @default(autoincrement())
  userId         Int
  token          String
  expiryDate     DateTime
  user           Player     @relation(fields: [userId], references: [id])
}

model BetVariation {
  id      Int      @id @default(autoincrement())
  numbers Int[]    @map("numbers")
  ticketId Int
  ticket  Ticket   @relation(fields: [ticketId], references: [id])
}



